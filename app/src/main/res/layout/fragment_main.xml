<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_dark"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/gray_dark_light"
        android:gravity="center"
        android:text="Accueil"
        android:textColor="@color/green"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Bienvenue,"
            android:textColor="@color/white_smoke"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/linearMainStartGame"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_new_game_green"
                android:drawablePadding="15dp"
                android:text="Nouvelle partie"
                android:textColor="@color/white_smoke"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/green_light" />

        <LinearLayout
            android:id="@+id/linearLayoutMainJoinGame"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_new_game_green"
                android:drawablePadding="15dp"
                android:text="Rejoindre une partie"
                android:textColor="@color/white_smoke"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/green_light" />

    </LinearLayout>

</LinearLayout>