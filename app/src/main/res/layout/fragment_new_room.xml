<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_dark"
    android:fillViewport="true"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            style="@style/MediumStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_room_more_info_needed"
            android:textColor="@color/grey_light"
            android:textSize="20sp" />

        <TextView
            style="@style/RegularStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/shape_square_green"
            android:drawablePadding="8dp"
            android:text="@string/new_room_duration"
            android:textColor="@color/blue_grey_light"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextNewRoomDuration"
            style="@style/RegularStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/blue_grey_semi_dark"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:hint="@string/new_room_duration_hint"
            android:inputType="textNoSuggestions"
            android:paddingStart="24dp"
            android:paddingTop="12dp"
            android:paddingEnd="24dp"
            android:paddingBottom="12dp"
            android:textColor="@color/grey_light"
            android:textColorHint="@color/grey_dark"
            android:textSize="20sp" />

        <TextView
            style="@style/RegularStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/shape_square_green"
            android:drawablePadding="8dp"
            android:text="@string/new_room_title"
            android:textColor="@color/blue_grey_light"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextNewRoomTitle"
            style="@style/RegularStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/blue_grey_semi_dark"
            android:hint="@string/new_room_title_hint"
            android:inputType="text"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/grey_light"
            android:textColorHint="@color/grey_dark"
            android:textSize="20sp" />

        <TextView
            style="@style/RegularStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/shape_square_green"
            android:drawablePadding="8dp"
            android:text="@string/new_room_nb_players"
            android:textColor="@color/blue_grey_light"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextNewRoomNbPlayers"
            style="@style/RegularStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/blue_grey_semi_dark"
            android:hint="@string/new_room_nb_players_hint"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/grey_light"
            android:textColorHint="@color/grey_dark"
            android:textSize="20sp" />

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/buttonNewRoomCreate"
            style="@style/RegularStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:background="@drawable/selector_button_green"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/new_room_create"
            app:finalCornerAngle="8dp"
            app:initialCornerAngle="8dp"
            app:spinning_bar_color="@color/green"
            app:spinning_bar_padding="6dp"
            app:spinning_bar_width="4dp" />

    </LinearLayout>

</ScrollView>