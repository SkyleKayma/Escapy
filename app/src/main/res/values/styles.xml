<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BoldStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/exo2_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/exo2_medium</item>
    </style>

    <style name="RegularStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/exo2_regular</item>
    </style>

    <style name="ItalicStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/exo2_italic</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="LightStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/exo2_light</item>
    </style>

</resources>
